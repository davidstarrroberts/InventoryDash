<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryDark">@color/darkest_blue</item>
        <item name="colorAccent">@color/orange_contrast</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:buttonStyle">@style/buttonStyle</item>
    </style>

    <style name="buttonStyle.cta">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="itemListName">
        <item name="android:textSize">@dimen/list_text_size</item>
        <item name="android:padding">@dimen/list_padding</item>
        <item name="android:layout_marginHorizontal">@dimen/list_margin</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="itemName">
        <item name="android:textSize">@dimen/detail_item_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/detail_padding</item>
        <item name="android:paddingRight">@dimen/detail_padding</item>
        <item name="android:paddingTop">@dimen/detail_padding</item>
    </style>

    <style name="itemDescription">
        <item name="android:textSize">@dimen/detail_description_text_size</item>
        <item name="android:paddingLeft">@dimen/detail_padding</item>
        <item name="android:paddingRight">@dimen/detail_padding</item>
        <item name="android:paddingTop">@dimen/detail_padding</item>
    </style>

    <style name="itemQoh">
        <item name="android:textSize">@dimen/detail_qoh_text_size</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="itemListQOH">
        <item name="android:textSize">@dimen/list_text_size</item>
        <item name="android:padding">@dimen/list_padding</item>
        <item name="android:layout_marginHorizontal">@dimen/list_margin</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="buttonStyle">
        <item name="android:background">@color/dark_blue</item>
        <item name="android:minWidth">@dimen/abc_action_button_min_width_material</item>
        <item name="android:minHeight">@dimen/abc_action_button_min_height_material</item>
        <item name="android:scaleType">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/list_text_size</item>
    </style>
</resources>